{
  "name": "rolt",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "bun run build && bun start",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo test",
    "format": "prettier \"{apps,packages}/**/*.{ts,tsx,md}\" --ignore-path .gitignore",
    "format:write": "bun format --write",
    "format:check": "bun format --check",
    "check-types": "turbo run check-types",
    "validate": "bun format:write && bun check-types && bun lint && bun build",
    "postinstall": "husky",
    "bootstrap": "turbo run bootstrap",
    "scripts": "sh scripts/index.sh"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "figlet": "^1.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "ora": "^8.2.0",
    "pinst": "^3.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.5",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "**/lambdas",
      "**/lambdas/**"
    ]
  },
  "version": "0.0.0",
  "dependencies": {
    "smee-client": "^3.1.1"
  }
}

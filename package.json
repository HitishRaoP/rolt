{
  "name": "rolt",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "yarn run build && yarn start",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo test",
    "format": "prettier \"{apps,packages}/**/*.{ts,tsx,md}\" --ignore-path .gitignore",
    "format:write": "yarn format --write",
    "format:check": "yarn format --check",
    "check-types": "turbo run check-types",
    "validate": "yarn format:write && yarn check-types && yarn lint && yarn build",
    "postinstall": "husky",
    "bootstrap": "turbo run bootstrap",
    "ionic:build": "npm run build",
    "ionic:serve": "npm run start",
    "tf:init": "cd terraform && terraform init",
    "tf:plan": "cd terraform && terraform plan",
    "tf:apply": "cd terraform && terraform apply -auto-approve"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "pinst": "^3.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "**/lambdas",
      "**/lambdas/**"
    ]
  },
  "version": "0.0.0"
}